@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Danh sách sản phẩm</title>
    <style>
        * {
     margin: 0;
     padding: 0;
     box-sizing: border-box;
     font-family: 'Arial', sans-serif;
 }

 body {
     color: #fff;
     background-color: #111;
     line-height: 1.6;
     display: flex; /* Sử dụng Flexbox cho body */
     flex-direction: column; /* Sắp xếp các phần tử theo chiều dọc */
     min-height: 100vh; /* Đảm bảo body có chiều cao tối thiểu bằng viewport height */
 }

 /* Container - Giới hạn chiều rộng trang */
 .container {
     width: 90%;
     max-width: 1200px;
     margin: 0 auto;
 }

 /* Header */
 header {
     background-color: #000;
     padding: 20px 0;
     position: fixed;
     width: 100%;
     top: 0;
     z-index: 1000;
 }

     header .container {
         display: flex;
         justify-content: space-between; /* Tách logo và menu về hai bên */
         align-items: center;
     }

     header .logo {
         height: 40px;
         flex: 0 0 auto; /* Đảm bảo logo không bị co giãn */
     }

     header nav {
         flex: 1; /* Để menu điều hướng chiếm không gian còn lại */
     }

         header nav ul {
             display: flex;
             justify-content: flex-end; /* Đẩy menu về bên phải */
             list-style: none;
         }

             header nav ul li a {
                 color: #fff;
                 text-decoration: none;
                 font-size: 16px;
                 padding: 10px 20px;
             }

                 header nav ul li a:hover {
                     color: #ff0000;
                 }

 /* Main content - Danh sách loại sản phẩm */
 .category-list {
     display: flex;
     gap: 20px; /* Khoảng cách giữa các mục */
     margin: 20px 0; /* Khoảng cách trên và dưới */
     justify-content: center; /* Căn giữa */
     padding: 0; /* Xóa padding */
 }

 .category-item {
     background-color: #222;
     color: #fff;
     padding: 10px 15px;
     border-radius: 5px;
     cursor: pointer;
     transition: background-color 0.3s;
 }

     .category-item:hover {
         background-color: #ff0000; /* Màu nền khi hover */
     }

 /* Main content - Featured Section */
 .featured {
     padding: 20px 0; /* Cách phần header để phần sản phẩm không bị trùng */
     background-color: #f4f4f4;
     text-align: center;
     flex: 1;
 }

 .featured-header h2 {
     font-size: 2.5em;
     margin-bottom: 40px;
     color: #333;
     font-weight: bold;
 }

 .cars {
     display: grid;
     grid-template-columns: repeat(3, 1fr); /* Tạo 3 cột */
     gap: 30px; /* Khoảng cách giữa các mẫu xe */
     justify-items: center;
     padding: 0 50px;
 }

 .car {
     background-color: #fff;
     border-radius: 10px;
     box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
     overflow: hidden;
     transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
     width: 100%;
     max-width: 350px; /* Mỗi mẫu xe chiếm 100% chiều rộng trong grid */
 }

     .car img {
         width: 100%;
         height: auto;
         display: block;
         transition: transform 0.3s ease-in-out;
     }

     .car h3 {
         font-size: 1.5em;
         color: #000;
         margin: 20px 0;
     }

     .car p {
         color: #666;
         font-size: 1em;
         padding: 0 20px 20px;
         line-height: 1.6;
     }

 /* Hiệu ứng khi di chuột lên các mẫu xe */
 .featured .car:hover {
     transform: translateY(-10px);
     box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
 }

     .featured .car:hover img {
         transform: scale(1.05); /* Phóng to ảnh khi hover */
     }

     /* Cập nhật phong cách nút "Thêm vào giỏ hàng" */
button {
    padding: 12px 25px;
    background-color: #ff0000;
    color: #fff;
    border: none;
    border-radius: 25px; /* Tạo các góc bo tròn */
    text-transform: uppercase;
    font-weight: bold;
    font-size: 16px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); /* Thêm bóng đổ nhẹ */
    margin-top: 10px;
}

/* Hiệu ứng khi di chuột lên nút */
button:hover {
    background-color: #cc0000; /* Màu nền khi hover */
    transform: translateY(-3px); /* Nâng nút lên khi hover */
    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2); /* Bóng đổ đậm hơn khi hover */
}

/* Hiệu ứng khi nhấn nút */
button:active {
    transform: translateY(1px); /* Khi nhấn, nút sẽ di chuyển nhẹ xuống */
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.15); /* Bóng đổ nhẹ hơn khi nhấn */
}
.featured-header h3{
    color:black;
    font-size:30px;
}
/* Khoảng cách giữa các khối loại xe */
.featured .container {
    margin-bottom: 40px;/* Thêm khoảng cách dưới mỗi khối */
    background-color:gainsboro;
    padding: 20px;
}
.container .featured-header {
    margin-bottom: 30px; /* Khoảng cách giữa phần header của mỗi loại xe và phần xe */
}

 /* Footer */
 footer {
     background-color: #333;
     color: white;
     padding: 20px 50px;
     margin-top: 40px;
     text-align: center;
 }

 .footer-content {
     display: flex;
     justify-content: space-between;
