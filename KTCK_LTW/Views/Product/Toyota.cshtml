    <script language="Javascript">
    let cartItems = JSON.parse(localStorage.getItem('cartItems')) || [];

    // Hàm thêm sản phẩm vào giỏ hàng
    function addToCart(productId, productName, productPrice) {
        const existingItem = cartItems.find(item => item.id === productId);

        if (existingItem) {
            existingItem.quantity += 1; // Tăng số lượng nếu sản phẩm đã có trong giỏ
        } else {
            cartItems.push({ id: productId, name: productName, price: productPrice, quantity: 1 }); // Thêm mới sản phẩm
        }

        localStorage.setItem('cartItems', JSON.stringify(cartItems)); // Lưu giỏ hàng vào localStorage
        alert(`${productName} đã được thêm vào giỏ hàng!`); // Thông báo sản phẩm đã được thêm
    }
