@{
    Layout = null;
}
<style>
     * {
     margin: 0;
     padding: 0;
     box-sizing: border-box;
     font-family: 'Arial', sans-serif;
 }

 body {
     color: #fff;
     background-color: #111;
     line-height: 1.6;
     display: flex; /* Sử dụng Flexbox cho body */
     flex-direction: column; /* Sắp xếp các phần tử theo chiều dọc */
     min-height: 100vh; /* Đảm bảo body có chiều cao tối thiểu bằng viewport height */
 }

 /* Container - Giới hạn chiều rộng trang */
 .container {
     width: 90%;
     max-width: 1200px;
     margin: 0 auto;
 }

 /* Header */
 header {
     background-color: #000;
     padding: 20px 0;
     position: fixed;
     width: 100%;
     top: 0;
     z-index: 1000;
 }

 header .container {
     display: flex;
     justify-content: space-between; /* Tách logo và menu về hai bên */
     align-items: center;
 }

 header .logo {
     height: 40px;
     flex: 0 0 auto; /* Đảm bảo logo không bị co giãn */
 }

 header nav {
     flex: 1; /* Để menu điều hướng chiếm không gian còn lại */
 }

 header nav ul {
     display: flex;
     justify-content: flex-end; /* Đẩy menu về bên phải */
     list-style: none;
 }

 header nav ul li a {
     color: #fff;
     text-decoration: none;
     font-size: 16px;
     padding: 10px 20px;
 }

 header nav ul li a:hover {
     color: #ff0000;
 }

 /* Contact Form Section */
    .contact-form {
        background-color: #222;
        background-image: url('../../content/image/background_contact.jpg');
        background-size: cover; /* Đảm bảo ảnh sẽ bao phủ toàn bộ khu vực */
        background-position: center; /* Đảm bảo ảnh luôn ở vị trí trung tâm */
        padding: 40px 0;
        padding-top: 120px; /* Đảm bảo form không bị che bởi header */
        color: #fff; /* Chỉnh màu chữ cho phù hợp với nền */
    }

 .contact-form .container {
     display: flex;
     justify-content: space-between;
     align-items: center;
 }

 .contact-form h2 {
     color: white;
     margin-bottom: 20px;
     text-align: center;
     width: 100%;
 }

 .contact-form form {
     background-color: rgba(51, 51, 51, 0.9); /* Thêm lớp nền màu mờ để form dễ nhìn hơn */
     padding: 20px;
     border-radius: 8px;
     width: 100%;
     max-width: 800px;
     margin: 0 auto;
 }

 .contact-form form .form-group {
     margin-bottom: 20px;
 }

 .contact-form form .form-group label {
     color: #fff;
     display: block;
     margin-bottom: 5px;
 }

 .contact-form form .form-group input,
 .contact-form form .form-group textarea {
     width: 100%;
     padding: 10px;
     background-color: #555;
     border: 1px solid #444;
     border-radius: 5px;
     color: #fff;
 }

 .contact-form form .form-group textarea {
     height: 150px;
 }

 .contact-form form .form-group button {
     width: 100%;
     padding: 10px;
     background-color: #ff0000;
     color: #fff;
     border: none;
     border-radius: 5px;
     font-size: 18px;
     cursor: pointer;
 }

 .contact-form form .form-group button:hover {
     background-color: #ff5500;
 }

 /* Footer */
 footer {
    background-color: #333;
    color: white;
    padding: 20px 50px;
    margin-top: 40px;
    text-align: center;
}

.footer-content {
    display: flex;
    justify-content: space-between;
}

.footer-section {
    flex: 1;
    margin-right: 20px;
}

.footer-section h3 {
    font-size: 1.2em;
    margin-bottom: 10px;
}

.footer-section p,
.footer-section ul {
    line-height: 1.6;
    font-size: 0.9em;
}

.footer-section ul {
    list-style-type: none;
    padding-left: 0;
}

.footer-section ul li {
    margin-bottom: 5px;
}

.footer-section ul li a {
    color: #ffcc00;
    text-decoration: none;
}

.footer-section ul li a:hover {
    text-decoration: underline;
}


body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

footer {
    margin-top: auto;
}
</style>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liên hệ</title>
</head>
<body>
    <!-- Header -->
    <header>
        <div class="container">
            <!-- Logo -->
            <div class="logo">
                <img src="logo.png" alt="Logo">
            </div>
            <!-- Menu -->
            <nav>
                <ul>
                    <li><a href="~/Home/test">Trang chủ</a></li>
                    <li><a href="~/Product/ProductList">Mẫu xe</a></li>
                    <li><a href="~/Cart/ShoppingCart">Giỏ hàng</a></li>
                    <li><a href="~/Home/Contact">Liên hệ</a></li>
                    <li><a href="~/Login/LoginPage">Tài khoản</a></li>
                </ul>
            </nav>
        </div>
    </header>
    
    <!-- Contact Form -->
    <section class="contact-form">
        <div class="container">
            <form>
                <h2>Liên hệ với chúng tôi</h2>
                <div class="form-group">
                    <label for="name">Họ và tên</label>
                    <input type="text" id="name" name="name" placeholder="Nhập họ và tên của bạn" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Nhập email của bạn" required>
                </div>
                <div class="form-group">
                    <label for="phone">Số điện thoại</label>
                    <input type="text" id="phone" name="phone" placeholder="Nhập số điện thoại của bạn">
                </div>
                <div class="form-group">
                    <label for="message">Lời nhắn</label>
                    <textarea id="message" name="message" placeholder="Nhập lời nhắn của bạn" required></textarea>
                </div>
                <div class="form-group">
                    <button type="submit">Gửi</button>
                </div>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <!-- Địa chỉ và Hotline -->
            <div class="footer-section">
                <h3>Thông tin liên hệ</h3>
                <p><strong>Địa chỉ:</strong> 365 Đường Nguyễn Thị Minh Khai, Quận 1, TP.HCM</p>
                <p><strong>Hotline:</strong> 0358 327 356</p>
            </div>

            <!-- Giờ làm việc -->
            <div class="footer-section">
                <h3>Giờ làm việc</h3>
                <p>Thứ 2 - Thứ 6: 8:00 - 18:00</p>
                <p>Thứ 7: 9:00 - 15:00</p>
                <p>Chủ nhật: Nghỉ</p>
            </div>

            <!-- Kết nối mạng xã hội -->
            <div class="footer-section">
                <h3>Kết nối với chúng tôi</h3>
                <ul>
                    <li><a href="#">Facebook</a></li>
                    <li><a href="#">Instagram</a></li>
                    <li><a href="#">LinkedIn</a></li>
                </ul>
            </div>
        </div>
    </footer>
</body>
</html>
